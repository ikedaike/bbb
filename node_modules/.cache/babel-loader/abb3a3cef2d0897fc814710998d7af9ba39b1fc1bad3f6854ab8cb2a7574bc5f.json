{"ast":null,"code":"// import StampDialog from '../dialog/StampDialog.vue';\nimport dayjs from 'dayjs';\n/* 標準のdateインスタンスは使うのが面倒なのでdayjsを使用 */\nimport 'dayjs/locale/ja';\nexport default {\n  components: {\n    // StampDialog\n  },\n  data() {\n    return {\n      attendanceMark: \"出勤\",\n      leavingMark: \"退勤\",\n      isAttendanceDisable: false,\n      isLeavingDisable: false,\n      isDialogView: false,\n      nowDate: \"\",\n      nowtime: \"\",\n      attendanceHourMinute: \"\",\n      leavingHourMinute: \"\"\n    };\n  },\n  mounted() {\n    this.nowDate = this.makeMonthDateDayTemplate(this.fetchNowDate());\n    this.nowtime = this.makeHourMinuteTemplate(this.fetchNowDate());\n  },\n  computed: {},\n  methods: {\n    /* 時刻取得 */\n    fetchNowDate() {\n      /* 日本語変換 */\n      dayjs.locale('ja');\n      /* インスタンスを返却 */\n      return dayjs();\n    },\n    /* 時刻表示用フォーマット */\n    makeHourMinuteTemplate(nowDate) {\n      return nowDate.format('HH:mm');\n    },\n    /* ○月○日(○)曜日表示フォーマット */\n    makeMonthDateDayTemplate(nowDate) {\n      return nowDate.format('M月D日(ddd)');\n    },\n    attendanceAtWork() {\n      /* 勤怠ボタンが押下されたら済を表示し、ボタンを非活性 */\n      this.attendanceMark = \"出勤済み\";\n      this.isAttendanceDisable = true;\n      /* 時刻を取得し、表示フォーマットを作成 */\n      this.attendanceHourMinute = this.makeHourMinuteTemplate(this.fetchNowDate());\n      /* ダイアログを表示 */\n      this.isDialogView = true;\n    },\n    leavingWork() {\n      this.leavingMark = \"退勤済み\";\n      this.isLeavingDisable = true;\n      this.leavingHourMinute = this.makeHourMinuteTemplate(this.fetchNowDate());\n    },\n    /* 取消が押下された場合 */\n    cancelAttendanceAtWork() {\n      this.attendanceMark = \"出勤\";\n      this.isAttendanceDisable = false;\n      this.attendanceHourMinute = \"\";\n    },\n    cancelLeavingWork() {\n      this.leavingMark = \"退勤\";\n      this.isLeavingDisable = false;\n      this.leavingHourMinute = \"\";\n    }\n  }\n};","map":{"version":3,"mappings":"AAoDA;AACA;AACA;AACA;AAEA;EACAA;IACA;EAAA,CACA;EACAC;IACA;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;IACA;EACA;EACAC;IACA;IACA;EACA;EACAC,WACA;EACAC;IACA;IACAC;MACA;MACAC;MACA;MACA;IACA;IACA;IACAC;MACA;IACA;IACA;IACAC;MACA;IACA;IACAC;MACA;MACA;MACA;MACA;MACA;MACA;MACA;IACA;IACAC;MACA;MACA;MACA;IACA;IACA;IACAC;MACA;MACA;MACA;IACA;IACAC;MACA;MACA;MACA;IACA;EACA;AACA","names":["components","data","attendanceMark","leavingMark","isAttendanceDisable","isLeavingDisable","isDialogView","nowDate","nowtime","attendanceHourMinute","leavingHourMinute","mounted","computed","methods","fetchNowDate","dayjs","makeHourMinuteTemplate","makeMonthDateDayTemplate","attendanceAtWork","leavingWork","cancelAttendanceAtWork","cancelLeavingWork"],"sourceRoot":"src/components/pages","sources":["StampPage.vue"],"sourcesContent":["<template>\n    <div class=\"stamp\">\n        <div class=\"stamp-view\">\n            <div class=\"attendance\">\n                <div class=\"date\">\n                    <p class=\"now-date\">\n                        {{ nowDate }}\n                    </p>\n                    <p class=\"now-time\">\n                        {{ nowtime }}\n                    </p>    \n                </div>\n                <!-- 出退勤ボタンをクリックしたら非活性にする -->\n                <button @click=\"attendanceAtWork\" :disabled=\"isAttendanceDisable\">{{ attendanceMark }}</button>\n                <br>\n                <!-- attendanceHourMinuteに値があれば時刻を表示 -->\n                <div v-show=\"!attendanceHourMinute\">\n                    未\n                </div>\n                <div v-show=\"attendanceHourMinute\">\n                    {{ attendanceHourMinute }}\n                    <!-- 取り消しボタン(bootstrap) -->\n                    <button type=\"button\" class=\"btn btn-link\" @click=\"cancelAttendanceAtWork\">[取消]</button>\n                </div>\n            </div>\n            <div class=\"leaving\">\n                <button @click=\"leavingWork\" :disabled=\"isLeavingDisable\" class=\"btn btn-primary\" data-toggle=\"modal\" data-target=\"#exampleModalCenter\">\n                    {{ leavingMark }}</button>\n                <div v-show=\"!leavingHourMinute\">\n                    未\n                </div>\n                <br>\n                <div v-show=\"leavingHourMinute\">\n                    {{ leavingHourMinute }}\n                    <button type=\"button\" class=\"btn btn-link\" @click=\"cancelLeavingWork\">[取消]</button>\n                </div>\n            </div>\n        </div>\n        <div class=\"dialog-view\" v-show=\"isDialogView\">\n            <!-- 打刻が押されたらダイアログを表示 -->\n            <div id=\"overlay\">\n                <div id=\"content\">\n                    <p>これがモーダルウィンドウです。</p>\n                    <p><button>close</button></p>\n                </div>\n            </div>\n            <!-- <StampDialog></StampDialog> -->\n        </div>\n    </div>\n</template>\n    \n<script>\n// import StampDialog from '../dialog/StampDialog.vue';\nimport dayjs from 'dayjs';\n/* 標準のdateインスタンスは使うのが面倒なのでdayjsを使用 */\nimport 'dayjs/locale/ja';\n\nexport default{\n    components: {\n        // StampDialog\n    },\n    data() {\n        return{\n            attendanceMark: \"出勤\",\n            leavingMark: \"退勤\",\n            isAttendanceDisable: false,\n            isLeavingDisable: false,\n            isDialogView: false,\n            nowDate: \"\",\n            nowtime:\"\",\n            attendanceHourMinute: \"\",\n            leavingHourMinute:\"\"\n        }\n    },\n    mounted() {\n        this.nowDate = this.makeMonthDateDayTemplate(this.fetchNowDate())\n        this.nowtime = this.makeHourMinuteTemplate(this.fetchNowDate())\n    },\n    computed: {\n    },\n    methods: {\n        /* 時刻取得 */\n        fetchNowDate(){\n            /* 日本語変換 */\n            dayjs.locale('ja');\n            /* インスタンスを返却 */\n            return dayjs()\n        },\n        /* 時刻表示用フォーマット */\n        makeHourMinuteTemplate(nowDate){\n            return nowDate.format('HH:mm')\n        },\n        /* ○月○日(○)曜日表示フォーマット */\n        makeMonthDateDayTemplate(nowDate){\n            return nowDate.format('M月D日(ddd)')\n        },\n        attendanceAtWork(){\n            /* 勤怠ボタンが押下されたら済を表示し、ボタンを非活性 */\n            this.attendanceMark = \"出勤済み\"\n            this.isAttendanceDisable = true\n            /* 時刻を取得し、表示フォーマットを作成 */\n            this.attendanceHourMinute = this.makeHourMinuteTemplate(this.fetchNowDate())\n            /* ダイアログを表示 */\n            this.isDialogView = true\n        },\n        leavingWork(){\n            this.leavingMark = \"退勤済み\"\n            this.isLeavingDisable = true\n            this.leavingHourMinute = this.makeHourMinuteTemplate(this.fetchNowDate())\n        },\n        /* 取消が押下された場合 */\n        cancelAttendanceAtWork(){\n            this.attendanceMark = \"出勤\"\n            this.isAttendanceDisable = false\n            this.attendanceHourMinute = \"\"\n        },\n        cancelLeavingWork(){\n            this.leavingMark = \"退勤\"\n            this.isLeavingDisable = false\n            this.leavingHourMinute = \"\"\n        },\n    }\n}\n</script>\n    \n<style scoped>\n#overlay{\n  z-index:1;\n\n  position:fixed;\n  top:0;\n  left:0;\n  width:100%;\n  height:100%;\n  background-color:rgba(0,0,0,0.5);\n\n  display: flex;\n  align-items: center;\n  justify-content: center;\n\n}\n#content{\n  z-index:2;\n  width:50%;\n  padding: 1em;\n  background:#fff;\n}\n</style>\n    "]},"metadata":{},"sourceType":"module","externalDependencies":[]}